<h1>Posting lists</h1>

<div class="container" style="margin-top:30px">
    <% @posts.each do |post| %>
    <table class="table table-bordered">
  	  <tbody>
    		<tr>
    			<td class="table-success">NAME</td>
    			<td><%= post.user.name %> (<%= country_name(post.user.country) if !post.user.country.nil? %>) ‚Üê<%= link_to "send message", message_path(post.user.id) %></td>
    		</tr>
    		<tr>
    			<td class="table-success">SKILL</td>
    			<td><%= post.job %></td>
    		</tr>
    		<tr>
    			<td class="table-success">TERM</td>
    			<td><%= post.start_date.strftime("%Y-%m-%d") %> ~ <%= post.end_date.strftime("%Y-%m-%d") %></td>
    		</tr>
    		<tr>
    			<td class="table-success">COMMENT</td>
    			<td><%= post.content %></td>
    		</tr>
        </tbody>
      </table>
  	  <% end %>
</div>

<style>
  .table-success {
    width: 20%;
  }
</style>
