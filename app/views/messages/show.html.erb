<div class="messages-index">
 <div class="message-left">
  <% @messages.each do |message| %>
<div class="message-image" >
  <p style="text-align: right;"><%= image_tag message.user.image  %></p>
</div>
 <% if message.receiver_id == current_user.id %>
    <p><%= message.body %></p>
<% end %>

 <% if message.user_id == current_user.id %>
    <p style="text-align: right;"><%= message.body %></p>
    <% end %>
<% end %>
</div>

<div class="message-form">
  <%= form_for @message do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body , class: "form-control" , required: true %>
      <%= f.hidden_field :receiver_id , value: params[:id] %>
      <%= f.submit "Send", class:"btn btn-block btn-info" %>
    </div>
  <% end %>
</div>
